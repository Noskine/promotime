generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  Id    String @id @default(uuid())
  Email String @unique
  Name  String
  Pass  String @map("password")
  Post  Post[]
}

model Post {
  Id       String   @id @default(uuid())
  Name     String
  Value    Int
  Discount Int?
  Coupon   String?
  CreateAt DateTime @default(now())
  User_Id  String   @map("UserId")
  User     User     @relation(fields: [User_Id], references: [Id])
}
